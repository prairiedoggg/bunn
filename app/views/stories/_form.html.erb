<%= form_with(model: story, class: "space-y-5") do |f| %>
  <% if story.errors.any? %>
    <div class="rounded-2xl border border-rose-200 bg-rose-50 p-4 text-sm text-rose-900 shadow-sm dark:border-rose-900/40 dark:bg-rose-950/40 dark:text-rose-100">
      <p class="font-medium">입력값을 다시 확인해 주세요.</p>
      <ul class="mt-2 list-disc pl-5">
        <% story.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid gap-4 md:grid-cols-2">
    <div class="space-y-1.5">
      <%= f.label :title, "제목", class: "text-sm font-medium text-slate-700 dark:text-slate-200" %>
      <%= f.text_field :title,
        placeholder: "예) 잉크 냄새가 남은 밤",
        class: "w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-slate-900 shadow-sm outline-none placeholder:text-slate-400 focus:border-slate-300 focus:ring-2 focus:ring-slate-200 dark:border-slate-800 dark:bg-slate-950 dark:text-slate-100 dark:focus:border-slate-700 dark:focus:ring-slate-800" %>
    </div>

    <div class="space-y-1.5">
      <%= f.label :pen_name, "필명(선택)", class: "text-sm font-medium text-slate-700 dark:text-slate-200" %>
      <%= f.text_field :pen_name,
        placeholder: "익명",
        class: "w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-slate-900 shadow-sm outline-none placeholder:text-slate-400 focus:border-slate-300 focus:ring-2 focus:ring-slate-200 dark:border-slate-800 dark:bg-slate-950 dark:text-slate-100 dark:focus:border-slate-700 dark:focus:ring-slate-800" %>
    </div>
  </div>

  <div class="space-y-1.5">
    <%= f.label :body, "본문", class: "text-sm font-medium text-slate-700 dark:text-slate-200" %>
    <%= f.text_area :body,
      rows: 16,
      placeholder: "여기에 단편소설을 작성해 주세요.",
      class: "w-full rounded-2xl border border-slate-200 bg-white px-3 py-3 text-slate-900 shadow-sm outline-none placeholder:text-slate-400 focus:border-slate-300 focus:ring-2 focus:ring-slate-200 dark:border-slate-800 dark:bg-slate-950 dark:text-slate-100 dark:focus:border-slate-700 dark:focus:ring-slate-800" %>
    <p class="text-xs text-slate-500 dark:text-slate-400">줄바꿈은 그대로 유지돼요.</p>
  </div>

  <div class="flex flex-wrap items-center justify-end gap-2">
    <%= link_to "취소", stories_path, class: "inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white px-4 py-2 text-sm font-semibold text-slate-700 shadow-sm hover:bg-slate-50 dark:border-slate-800 dark:bg-slate-950 dark:text-slate-200 dark:hover:bg-slate-900" %>
    <%= f.submit(story.persisted? ? "수정 저장" : "등록", class: "inline-flex items-center justify-center rounded-xl bg-slate-900 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-slate-800 active:bg-slate-950 dark:bg-white dark:text-slate-900 dark:hover:bg-slate-100") %>
  </div>
<% end %>
